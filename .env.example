# Cloudflare
CLOUDFLARE_API_TOKEN=your_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_PER_PAGE=1000
CLOUDFLARE_DIRECTION=asc
CLOUDFLARE_HIDE_USER_LOGS=false
CLOUDFLARE_SINCE_SAFETY_LAG_SECONDS=60
CLOUDFLARE_REQUEST_TIMEOUT_SECONDS=30

# Polling
POLL_INTERVAL_SECONDS=60
INITIAL_CHECKPOINT=

# Analytics DB (PostgreSQL + TimescaleDB)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=audit_logs
PG_USER=postgres
PG_PASSWORD=postgres

# S3-compatible storage (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=audit-logs
S3_REGION=us-east-1
